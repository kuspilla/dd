		// TODO Auto-generated method stub
  Scanner sc= new Scanner(System.in);
     
  // creation HashMap
     HashMap <Integer,String> map = new HashMap<>();
     
     // add elements using put or get
     map.put(1, "Student1");
     map.put(2, "student2");
    // print HashMap
     
     System.out.println( map.toString());
  // get element
     System.out.println(map.get(1));
     
     // remove element
      map.remove(1);
  System.out.println(map);
  
  // replace
  map.put(1,"student1");
  map.replace(1, "mama");
  System.out.println(map);
  
  // size map empty or not
  System.out.println("map size "+map.size());
  System.out.println("Map is empty "+ map.isEmpty());
  
   // search element  look up
    System.out.println("value praset " + map.containsKey(1) );
    
    // get or default or Given element present or not 
  
     System.out.println(map.getOrDefault(10, "Value not present Map"));
     
     // Iterate Map
     for ( Integer key : map.keySet()) {
    	 System.out.print("Iterate: "+map.get(key)+" ");
    	 
     }
     HashMap <Integer, Integer> aa =new HashMap<>();
