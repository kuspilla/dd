     System.out.println();
     for ( String v : map.values()) {
    	 System.out.print("value "+v+" ");
     }
     System.out.println();
     // only key print
     for( Integer v : aa.keySet()) {
    	 System.out.print("key " +v+" ");
     }
     
     
